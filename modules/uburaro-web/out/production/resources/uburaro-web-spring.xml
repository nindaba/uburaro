<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context https://www.springframework.org/schema/context/spring-context.xsd">

    <import resource="uburaro-facade-spring.xml"/>
    <context:component-scan base-package="bi.uburaro.web.controllers"/>


    <bean id="sessionInitFilter" class="bi.uburaro.web.filters.SessionInitFilter">
        <constructor-arg name="typeService" ref="typeService"/>
        <constructor-arg name="environment" ref="environment"/>
    </bean>

    <alias name="defaultSessionService" alias="sessionService"/>
    <bean id="defaultSessionService" class="bi.uburaro.web.webservices.DefaultSessionService">
        <constructor-arg name="environment" ref="environment"/>
    </bean>

</beans>